<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/friend_list_item_availableCircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="8dp"
        android:layout_margin="16dp" />

    <ImageView
        android:id="@+id/friend_list_item_imgImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:padding="4dp" />

    <TextView
        android:id="@+id/friend_list_item_fullNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/friend_list_item_imgImageView"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="Full name" />

    <TextView
        android:id="@+id/friend_list_item_statusTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/friend_list_item_fullNameTextView"
        android:layout_toRightOf="@id/friend_list_item_imgImageView"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp"
        android:textSize="12sp"
        android:text="Status" />

</RelativeLayout>