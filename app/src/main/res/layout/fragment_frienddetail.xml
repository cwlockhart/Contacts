<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/detail_img_imageview"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="8dp"
            android:layout_weight="2"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_toRightOf="@id/detail_img_imageview">

            <TextView
                android:id="@+id/detail_name_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Full name"
                android:textStyle="bold"
                android:textSize="28sp"
                android:padding="8dp" />

            <TextView
                android:id="@+id/detail_phone_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Phone number"
                android:textSize="18sp"
                android:padding="8dp" />

            <TextView
                android:id="@+id/detail_address_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Addess"
                android:textSize="18sp"
                android:padding="8dp" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/detail_bio_textview"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Bio"
            android:padding="8dp"
            android:layout_alignParentLeft="true"
            android:maxLines="10"
            android:scrollbars="vertical" />

        <TextView
            android:id="@+id/detail_photos_textview"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_alignParentRight="true"
            android:maxLines="10"
            android:scrollbars="vertical" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/detail_statuses_title"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/statuses_title"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detail_statuses_textview"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_statuses_title"
            android:padding="8dp"
            android:layout_alignParentLeft="true"
            android:maxLines="10"
            android:scrollbars="vertical" />


        <ImageView
            android:id="@+id/detail_availableCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:layout_margin="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true" />

    </RelativeLayout>

</LinearLayout>